@using QuizIT.Common.Models;
@using static QuizIT.Common.Constant;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @*logo*@
    <link rel="shortcut icon" type="image/x-icon" href="~/img/logo.png">
    @*script*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/toastr/build/toastr.min.js"></script>
    <script src="~/js/common/common.js"></script>
    @*css*@
    <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/toastr/build/toastr.min.css" rel="stylesheet" />
    <link href="~/css/common/loading.css" rel="stylesheet" />
    <link href="~/css/common/const.css" rel="stylesheet" />
    <link href="~/css/common/common.css" rel="stylesheet" />
</head>
<body>
    @* div để hiện loading*@
    <div class="my-loading">
        <div class="spinner-border m-text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <header class="header d-flex justify-content-between align-items-center">
        <div class="w-25">
            <button class="btn-base d-flex align-items-center" id="btn-sidebar">
                <i class="bx bx-menu"></i>
            </button>
        </div>
        <div class="w-75">
            <span>Xin chào, @CurrentUser.Name</span>
        </div>
    </header>
    <div class="body">
        <div class="sidebar">
            <div class="d-flex flex-column overflow-hidden">
                <div class="sidebar-logo">
                    <a href="~/" class="sidebar-link">
                        <img src="~/img/logo.png" alt="logo" />
                        <span>QuizIT</span>
                    </a>
                </div>
                <div class="sidebar-list">
                    <a href="~/bo-de" class="sidebar-item sidebar-link @(ViewBag.ActivePage == "exam" ? "active" : "")">
                        <i class="bx bx-notepad"></i>
                        <span>Bộ đề</span>
                    </a>
                    <a href="~/lich-su" class="sidebar-item sidebar-link @(ViewBag.ActivePage == "history" ? "active" : "")">
                        <i class="bx bx-time"></i>
                        <span>Lịch sử</span>
                    </a>
                    @if (CurrentUser.Role == Role.ADMIN)
                    {
                        <a href="~/admin/bo-de" class="sidebar-item sidebar-link">
                            <i class="bx bx-cog"></i>
                            <span>Quản trị</span>
                        </a>
                    }
                    <a href="JavaScript:void(0);" class="sidebar-item sidebar-link" id="btn-logout">
                        <i class="bx bx-log-out"></i>
                        <span>Đăng xuất</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
